# Install vundle
if [ -d ~/.vim/bundle/vundle ]; then
	echo "Vundle appears to be installed"
else
	git clone git://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
fi

# Create vim dirs
mkdir -p ~/.vim/tmp
mkdir -p ~/.vim/backup
mkdir -p ~/.vim/undo

# Copy vim files
cp ${DOT_DIR}/vim/vimrc ~/.vimrc

vim +BundleInstall +qa
