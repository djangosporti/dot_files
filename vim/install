# Install vundle
if [ -d ~/.vim/bundle/neobundle.vim ]; then
	echo "Vundle appears to be installed"
else
    git clone git://github.com/Shougo/neobundle.vim ~/.vim/bundle/neobundle.vim
fi

# Create vim dirs
mkdir -p ~/.vim/tmp
mkdir -p ~/.vim/backup
mkdir -p ~/.vim/undo

# Copy vim files
cp ${DOT_DIR}/vim/vimrc ~/.vimrc

vim +NeoBundleInstall +qa
